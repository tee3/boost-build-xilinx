project
  : default-build
    <target-os>elf
    <target-os>freertos

    <instruction-set>cortex-r5
    <instruction-set>cortex-a53

    <xsdk-processor-id>0
    <xsdk-processor-id>1
  ;

# @todo for now this must be explicit
explicit ws_c ;
xsdkws ws_c
  : # sources
    $(zcu102-hdf)
  : # requirements
    <link>static

    <xsdk-language>c
  : # default-build
  : # usage-requirements
  ;

# @todo for now this must be explicit
explicit ws_cpp ;
xsdkws ws_cpp
  : # sources
    $(zcu102-hdf)
  : # requirements
    <link>static

    <xsdk-language>c++
  : # default-build
  : # usage-requirements
  ;

exe empty_c
  : # sources
    empty_c.c
  : # requirements
    <link>static

    <xsdk-language>c

    <dependency>ws_c

    <linkflags>"-Wl,-T -Wl,lscript.ld"
  : # default-build
  : # usage-requirements
  ;

exe empty_cpp
  : # sources
    empty_cpp.cpp
  : # requirements
    <link>static

    <xsdk-language>c++

    <dependency>ws_cpp

    <linkflags>"-Wl,-T -Wl,lscript.ld"
  : # default-build
  : # usage-requirements
  ;
