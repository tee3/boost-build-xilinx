project
  : default-build
    <target-os>elf
    <target-os>freertos

    <instruction-set>cortex-r5
    <instruction-set>cortex-a53

    <xsdk-processor-id>0
    <xsdk-processor-id>1
  ;

# @todo for now this must be explicit
explicit ws ;
xsdkws ws
  : # sources
    $(zcu102-hdf)
  : # requirements
    <link>static
  : # default-build
  : # usage-requirements
    <linkflags>"-Wl,-T -Wl,lscript.ld"
  ;

exe empty_c
  : # sources
    empty_c.c
  : # requirements
    <link>static

    <dependency>ws
  ;

exe empty_cpp
  : # sources
    empty_cpp.cpp
  : # requirements
    <link>static

    <dependency>ws

    <linkflags>"-Wl,--start-group -Wl,-lstdc++ -Wl,--end-group"
  ;
