path-constant root : ../.. ;

explicit ws ;
xsdkws ws
  : # sources
    $(zcu102-hdf)
  : # requirements
    <target-os>freertos

    <link>static

    <instruction-set>cortex-r5+vfpv3-d16

    <xsdk-template>"OpenAMP RPC Demo"

    <xsdk-library>libmetal
    <xsdk-library>openamp
  : # default-build
  : # usage-requirements
    <linkflags>"-Wl,-T -Wl,$(root)/test/zcu102-rpc-demo/lscript.ld"
  ;

exe rpc-demo
  : # sources
    rpc_demo.c
    rpmsg-rpc-demo.h

    helper.c

    platform_info.c
    platform_info.h

    rsc_table.c
    rsc_table.h
  : # requirements
    <target-os>freertos

    <link>static

    <instruction-set>cortex-r5+vfpv3-d16

    <dependency>ws
  ;
