project
  : default-build
    <target-os>elf
    <target-os>freertos

    <instruction-set>cortex-a9

    <xsdk-processor-id>0
    <xsdk-processor-id>1
  ;

# @todo for now this must be explicit
explicit ws_c ;
xsdkws ws_c
  : # sources
    $(zc702-hdf)
  : # requirements
    <link>static

    <xsdk-language>c
  : # default-build
  : # usage-requirements
  ;

# @todo for now this must be explicit
explicit ws_cpp ;
xsdkws ws_cpp
  : # sources
    $(zc702-hdf)
  : # requirements
    <link>static

    <xsdk-language>c++
  : # default-build
  : # usage-requirements
  ;

exe empty_c
  : # sources
    empty_c.c
  : # requirements
    <link>static

    <xsdk-language>c

    <linkflags>"-Wl,-T -Wl,lscript.ld"

    <dependency>ws_c
  : # default-build
  : # usage-requirements
  ;

exe empty_cpp
  : # sources
    empty_cpp.cpp
  : # requirements
    <link>static

    <xsdk-language>c++

    <linkflags>"-Wl,-T -Wl,lscript.ld"

    <dependency>ws_cpp
  : # default-build
  : # usage-requirements
  ;
