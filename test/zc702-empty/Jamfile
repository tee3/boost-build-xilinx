project
  : default-build
    # @todo Xilinx cortex-a9 boot.S requires vfpv3
    <platform>elf--cortex-a9+vfpv3-hard
    <platform>elf--cortex-a9+vfpv3-softfp
    <platform>elf-arm-cortex-a9+vfpv3-hard
    <platform>elf-arm-cortex-a9+vfpv3-softfp
    <platform>freertos--cortex-a9+vfpv3-hard
    <platform>freertos--cortex-a9+vfpv3-softfp
    <platform>freertos-arm-cortex-a9+vfpv3-hard
    <platform>freertos-arm-cortex-a9+vfpv3-softfp

    <xsdk-processor-id>0
    <xsdk-processor-id>1
  : requirements
    <link>static
  ;

explicit ws ;
xsdkws ws
  : # sources
    $(zc702-hdf)
  : # requirements
  : # default-build
  : # usage-requirements
    <linkflags>"-Wl,-T -Wl,lscript.ld"
  ;

exe empty_c
  : # sources
    empty_c.c

    ws
  : # requirements
    <dependency>ws
  ;

exe empty_cpp
  : # sources
    empty_cpp.cpp

    ws
  : # requirements
    <dependency>ws

    <linkflags>"-Wl,--start-group -Wl,-lstdc++ -Wl,--end-group"
  ;
